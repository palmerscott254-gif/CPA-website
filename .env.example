# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-django
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# AWS S3 Configuration (for media file storage)
USE_S3=true
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net  # Optional CDN

# Database Configuration
# SQLITE_PATH=/path/to/db.sqlite3  # Optional, defaults to backend/db.sqlite3

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_SECRET=your-google-client-secret

# Frontend URLs
LOGIN_REDIRECT_URL=http://localhost:3000/
LOGOUT_REDIRECT_URL=http://localhost:3000/

# CORS Configuration
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://another-domain.com
